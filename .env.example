# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/fastgpt_workflow

# API服务器配置
PORT=3002
API_BASE_URL=http://localhost:3002

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:3002
FRONTEND_PORT=3001

# 管理员凭据配置
NEXT_PUBLIC_ADMIN_USERNAME=admin
NEXT_PUBLIC_ADMIN_PASSWORD=admin123

# CORS配置 - 允许的域名（用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,https://your-domain.com

# 生产环境设置
NODE_ENV=development

# 隐藏开发指示物（true/false）
HIDE_DEV_INDICATORS=true

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=public/uploads

# 数据库连接池配置
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# 健康检查间隔（毫秒）
HEALTH_CHECK_INTERVAL=30000

# 数据查询限制
DATA_QUERY_LIMIT=3000